<% provide(:title, 'Sign up') %>
<head>

</head>
<body style=background-size:cover; background="https://farm3.staticflickr.com/2932/14523171849_1e5565be1e_o.jpg">
  <h1 align='center'>Sign up</h1>

  <div align='center'class="row">
    <div class="span6 offset3">

      <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </p>
      <p>
        <%= f.label :password_confirmation, "Confirmation" %><br>
        <%= f.password_field :password_confirmation %>
      </p>
       <p>
        <%= f.label :phone %><br>
        <%= f.text_field :phone %>
      </p>
      <p>
        <%= f.label :address %><br>
        <%= f.text_area :address %>
      </p>
      <p>
        <%= f.radio_button :isCandidate, 'candidate'%> 
        <%= label :isCandidate, 'candidate' %>
        <%= f.radio_button :isCandidate, 'company' %>
        <%= label :isCandidate, 'company' %>
      </p>
      &nbsp;
      <p>
       <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
     </p>
     &nbsp;
     <p>
      <%=link_to 'Back', signin_path %>
    </p>
    <% end %>
  </div>
  </div
</body>