<h1>Listing Positions</h1>

<%= link_to 'Post a new position', new_position_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Post Date</th>
    <th>Update Date</th>
  </tr>

  <% @positions_all.each do |position| %>
    <tr>
      <td><%= position.name %></td>
      <td><%= position.created_at %></td>
      <td><%= position.updated_at %></td>
      <td><%= link_to 'Show', position_path(position) %></td>
      <td><%= link_to 'Edit', edit_position_path(position) %></td>
      <td><%= link_to 'Apply', {:controller => 'applications',:action => 'create', :my_position_id => position.id} %></td>
      <td><%= link_to 'Delete', position_path(position), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
