<h1>New Application</h1>

<%= form_for :application, url:applications_path do |f| %>
  <p>
    <%= f.label :application_status, "Application Status" %><br>
    <%= f.text_field :application_status %>
  </p>

  <p>
    <%= f.label :update_date, "Update Date" %><br>
    <%= f.text_field :update_date %>
  </p>

  <p>
    <%= f.label :user_id, "Applicant Num" %><br>
    <%= f.text_field :user_id %>
  </p>

  <p>
    <%= f.label :position_id, "Applied Position Num" %><br>
    <%= f.text_field :position_id %>
  </p>

  <p>
    <%= f.submit "Apply" %>
  </p>

<% end %>

<%= link_to 'Back', applications_path %>
